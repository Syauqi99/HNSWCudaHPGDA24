{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Cuda",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main_cuda_test", // Replace with your actual executable name
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Ensure this path is correct for gdb
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "(gdb) Launch CPU",
